<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="raymond.lukanta.com.chatpokeandroid.firstpage.FirstPageActivityFragment"
    tools:showIn="@layout/activity_first_page">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_first_page_chat_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_text_first_page_chat_editor"
        android:padding="@dimen/activity_horizontal_margin" />

    <EditText
        android:id="@+id/edit_text_first_page_chat_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/floating_action_button_first_page_send_button"
        android:layout_toStartOf="@+id/floating_action_button_first_page_send_button"
        android:background="@drawable/message_bg_input"
        android:hint="@string/send_a_message"
        android:maxHeight="@dimen/max_edit_text_height"
        android:padding="@dimen/activity_horizontal_margin"
        android:scrollbars="vertical"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button_first_page_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_send" />

</RelativeLayout>
